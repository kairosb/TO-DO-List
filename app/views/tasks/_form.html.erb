<div class="container">
<%= form_with model: [@todo_list, task], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, 'Título da Tarefa', class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, 'Descrição', class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 3 %>
  </div>

  <div class="mb-3">
    <%= f.label :priority_id, 'Prioridade', class: 'form-label' %>
    <%= f.select :priority_id, Priority.all.pluck(:name, :id), {}, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.label :estimate, 'Tempo Estimado (em horas)', class: 'form-label' %>
    <%= f.number_field :estimate, class: 'form-control', min: 1 %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :completed, class: 'form-check-input' %>
    <%= f.label :completed, 'Concluído', class: 'form-check-label' %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit 'Salvar', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>