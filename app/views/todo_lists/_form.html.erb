<%= form_with model: @todo_list, local: true do |f| %>
<div class="mb-3">
    <%= f.label :name, "Nome da Lista", class: "form-label text-white" %>
    <%= f.text_field :name, class: "form-control", required: true, placeholder: "Digite o nome da lista" %>
</div>

<div class="mb-3">
  <%= f.label :icon, "Escolha um Ícone", class: "form-label text-white" %>
  <%= f.select :icon, 
      options_for_select([
        ["📋 Tarefas", "icon-tasks.svg"],
        ["📅 Calendário", "icon-calendar.svg"],
        ["🎯 Metas", "icon-goals.svg"],
        ["🛒 Compras", "icon-shopping.svg"],
        ["🏠 Casa", "icon-home.svg"]
      ], @todo_list.icon), 
      { prompt: "Selecione um ícone" }, 
      class: "form-select" %>
</div>


<div class="d-grid gap-2">
    <%= f.submit @todo_list.new_record? ? "Criar Lista" : "Atualizar Lista", class: "btn btn-primary btn-lg" %>
</div>
<% end %>