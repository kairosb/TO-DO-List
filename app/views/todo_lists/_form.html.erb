<%= form_with model: @todo_list, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, 'Nome da Lista', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancelar', todo_lists_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
