<h2 class="text-center py-3">Criar Conta</h2>

<div class="container">
  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" } do |f| %>
    <div class="mb-3">
      <%= f.label :username, class: "form-label" %>
      <%= f.text_field :username, autofocus: true, placeholder: "Digite seu nome de usuário", class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, placeholder: "Digite seu email", autocomplete: "email", class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, placeholder: "Digite sua senha", autocomplete: "new-password", class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirme sua senha", class: "form-label" %>
      <%= f.password_field :password_confirmation, placeholder: "Confirme sua senha", autocomplete: "new-password", class: "form-control", required: true %>
    </div>

    <div class="d-grid gap-2">
      <%= f.submit "Registrar", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <p>Já tem uma conta? <%= link_to "Entrar", new_session_path(resource_name), class: "text-primary" %></p>
  </div>
</div>
