<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <%= image_tag 'login-icon.svg', class: 'img-fluid', alt: 'Login illustration' %>
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <%= form_with model: resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" } do |f| %>
                <div class="form-outline mb-4">
                    <%= f.label :email, "Email", class: "form-label text-white" %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Digite seu email", class: "form-control form-control-lg login-field", required: true, id: "email" %>
                </div>

                <div class="form-outline mb-4">
                    <%= f.label :password, "Senha", class: "form-label text-white" %>
                    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Digite sua senha", class: "form-control form-control-lg login-field", required: true, id: "password" %>
                </div>

                <div class="d-flex justify-content-around align-items-center mb-4">
                    <% if devise_mapping.rememberable? %>
                    <div class="form-check">
                        <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
                        <%= f.label :remember_me, "Lembrar de mim", class: "form-check-label text-white" %>
                    </div>
                    <% end %>
                    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-decoration-none text-primary" %>
                </div>

                <div class="d-grid gap-2">
                    <%= f.submit "Entrar", class: "btn btn-primary btn-lg btn-block" %>
                </div>

                <div class="divider d-flex align-items-center my-4">
                    <p class="text-center fw-bold mx-3 mb-0 text-muted">OU</p>
                </div>

                <% end %>

                <div class="mt-3 text-center">
                    <%= link_to "Cadastrar", new_registration_path(resource_name), class: "text-decoration-none text-primary" %>
                </div>
            </div>
        </div>
    </div>
</section>