<h2 class="text-center py-3">Esqueci Minha Senha</h2>

<div class="container">
  <%= form_with model: resource, as: resource_name, url: password_path(resource_name), html: { class: "needs-validation" } do |f| %>
    <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
    </div>

    <div class="d-grid gap-2">
      <%= f.submit "Enviar instruções de redefinição", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to "Voltar ao login", new_user_session_path, class: "btn btn-link" %>
  </div>
</div>
