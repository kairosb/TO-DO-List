<h2 class="text-center py-3">Alterar Senha</h2>

<div class="container">
  <%= form_with model: resource, as: resource_name, url: password_path(resource_name), html: { class: "needs-validation" } do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Nova Senha", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "ConfirmaÃ§Ã£o da Nova Senha", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
    </div>

    <div class="d-grid gap-2">
      <%= f.submit "Atualizar Senha", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "Voltar", new_user_session_path, class: "btn btn-secondary btn-block" %>
  </div>
</div>
